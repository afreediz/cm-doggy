{
  "manifest_version": 3,
  "name": "Web Doggy",
  "version": "1.0",
  "description": "A playful dog companion that interacts with your webpages",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["doggy.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["doggy.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-16.png",
    "128": "icon-16.png"
  }
}